//https://neetcode.io/problems/is-anagram/question

****
class Solution {
public:
    bool isAnagram(string s, string t) 
    {
        if(s.length() != t.length()) return false;
        sort(s.begin(),s.end());
        sort(t.begin(),t.end());

        return s == t;
    }
};

Time : o(nlogn) as len must same 
space : o(1)
****
class Solution {
public:
    bool isAnagram(string s, string t) 
    {
        if(s.size() != t.size()) return false; //edge case
        vector<int> map_s(26,0);

        for(auto& ch:s) //time : o(len of s)
        {
            map_s[ch-'a']++;
        }

        for(int i=0;i<t.size();i++) //time : o(len of t)
        {
            map_s[t[i]-'a']--;
        }

        for(int i=0;i<26;i++) //space o(1)
        {
            if(map_s[i]!=0) return false;
        }
        return true;
    }
};

********
